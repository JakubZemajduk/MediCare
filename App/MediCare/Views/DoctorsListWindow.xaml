<Window x:Class="MediCare.Views.DoctorsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista lekarzy" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Lista lekarzy" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Width="220" Margin="0,0,10,0">
                <DockPanel>
                    <TextBlock Text="🔍" FontSize="14" Margin="5,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameTextBox"
                             Margin="5,2"
                             BorderThickness="0"
                             Foreground="Gray"
                             Text="Szukaj ..."
                             GotFocus="NameTextBox_GotFocus"
                             LostFocus="NameTextBox_LostFocus"
                             TextChanged="NameTextBox_TextChanged"/>
                </DockPanel>
            </Border>

            <ComboBox x:Name="SpecializationComboBox" Width="200"
                      SelectionChanged="SpecializationComboBox_SelectionChanged"/>
        </StackPanel>

        <ListView x:Name="DoctorsList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Imię i nazwisko" DisplayMemberBinding="{Binding FullName}" Width="200"/>
                    <GridViewColumn Header="Numer telefonu" DisplayMemberBinding="{Binding PhoneNumber}" Width="150"/>
                    <GridViewColumn Header="Specjalizacja" DisplayMemberBinding="{Binding Specialization}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>