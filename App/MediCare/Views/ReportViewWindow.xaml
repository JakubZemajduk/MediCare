<Window x:Class="MediCare.Views.ReportViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raport z wizyty" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Raport z wizyty" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Lekarz prowadzący:" FontWeight="SemiBold"/>
                <TextBlock x:Name="DoctorNameTextBlock" FontSize="14"/>

                <TextBlock Text="Specjalizacja:" FontWeight="SemiBold" Margin="0,5,0,10"/>
                <TextBlock x:Name="SpecializationTextBlock" FontSize="14"/>

                <TextBlock Text="Nazwa choroby:" FontWeight="SemiBold"/>
                <TextBox x:Name="DiseaseTextBox" Margin="0,5" IsReadOnly="True"/>

                <TextBlock Text="Opis wizyty:" Margin="0,10,0,0" FontWeight="SemiBold"/>
                <TextBox x:Name="DescriptionTextBox" Margin="0,5" Height="100"
                         AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True"/>

                <TextBlock Text="Recepta:" Margin="0,10,0,0" FontWeight="SemiBold"/>
                <TextBox x:Name="PrescriptionTextBox" Margin="0,5" Height="60"
                         AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Drukuj" Width="100" Margin="0,0,10,0" Click="PrintButton_Click"/>
            <Button Content="Zapisz PDF" Width="100" Margin="0,0,10,0" Click="SavePdfButton_Click"/>
            <Button Content="Zamknij" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>