<Window x:Class="MediCare.Views.DoctorMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel lekarza"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E3F0FF" Offset="0"/>
            <GradientStop Color="#F5F5F5" Offset="0.5"/>
            <GradientStop Color="#C8E6C9" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                BorderBrush="#0D47A1"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#333" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ExitButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="BorderBrush" Value="#B71C1C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#333" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LangButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Przełącznik języka w prawym górnym rogu -->
        <Button x:Name="LangButton"
                Content="PL"
                Style="{StaticResource LangButtonStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,30,0"
                Width="54"
                Height="38"
                Click="ChangeLanguage_Click"/>
        <StackPanel x:Name="MenuPanel"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="400"
                    Opacity="0">
            <TextBlock Text="Panel lekarza"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>
            <Button x:Name="MyAppointmentsBtn"
                    Content="Zaplanowane wizyty"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="MyAppointments_Click"/>
            <Button x:Name="HistoryBtn"
                    Content="Historia wizyt"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="HistoryAppo_Click"/>
            <Button x:Name="AbsenceBtn"
                    Content="Zgłoś nieobecność"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ReportAbsence_Click"/>
            <Button x:Name="ExitBtn"
                    Content="Wyloguj"
                    Style="{StaticResource ExitButtonStyle}"
                    Click="Logout_Click"/>
        </StackPanel>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="MenuPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.7"/>
                        <DoubleAnimation Storyboard.TargetName="MyAppointmentsBtn"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.5" BeginTime="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="HistoryBtn"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.5" BeginTime="0:0:0.4"/>
                        <DoubleAnimation Storyboard.TargetName="AbsenceBtn"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.5" BeginTime="0:0:0.8"/>
                        <DoubleAnimation Storyboard.TargetName="ExitBtn"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.5" BeginTime="0:0:1.0"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>
