<Window x:Class="MediCare.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raport z wizyty" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Raport z wizyty" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Nazwa choroby:"/>
            <TextBox Name="DiseaseTextBox" Margin="0,5"/>

            <TextBlock Text="Opis wizyty:" Margin="0,10,0,0"/>
            <TextBox Name="DescriptionTextBox" Margin="0,5" AcceptsReturn="True" Height="100"/>

            <TextBlock Text="Recepta (opcjonalnie):" Margin="0,10,0,0"/>
            <TextBox Name="PrescriptionTextBox" Margin="0,5" AcceptsReturn="True" Height="60"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="SaveButton" Content="Zapisz" Width="100" Margin="10" Click="SaveButton_Click"/>
            <Button Content="Zamknij" Width="100" Margin="10" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
