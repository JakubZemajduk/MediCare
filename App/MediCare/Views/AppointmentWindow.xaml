<Window x:Class="MediCare.Views.AppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Umów wizytę"
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button" x:Key="HourButtonStyle">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="#B0B0B0"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Umów wizytę"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Oddział:" FontWeight="SemiBold" Foreground="#555"/>
            <ComboBox x:Name="SpecializationComboBox"
                      SelectionChanged="SpecializationComboBox_SelectionChanged"/>

            <TextBlock Text="Lekarz:" FontWeight="SemiBold" Foreground="#555"/>
            <ComboBox x:Name="DoctorComboBox"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="Id"
                      SelectionChanged="DoctorComboBox_SelectionChanged"/>

            <TextBlock Text="Data wizyty:" FontWeight="SemiBold" Foreground="#555"/>
            <Calendar x:Name="Calendar"
                      SelectedDatesChanged="Calendar_SelectedDatesChanged"
                      DisplayDateChanged="Calendar_DisplayDateChanged"
                      Loaded="Calendar_Loaded"
                      Margin="0,0,0,10"
                      DisplayDateStart="{x:Static sys:DateTime.Now}"/>

            <TextBlock Text="Godzina:" FontWeight="SemiBold" Foreground="#555"/>
            <WrapPanel x:Name="HourWrapPanel" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Umów wizytę" Click="ScheduleButton_Click" Width="200" Height="50"  
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
