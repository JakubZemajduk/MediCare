<Window x:Class="MediCare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediCare - Menu" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Name="RegisterButton" Content="Register" Width="120" Height="40" Margin="0,0,0,10" Click="RegisterButton_Click"/>
        <Button Name="LoginButton" Content="Login" Width="120" Height="40" Margin="0,0,0,10" Click="LoginButton_Click"/>
        <Button Name="ExitButton" Content="Exit" Width="120" Height="40" Click="ExitButton_Click"/>
    </StackPanel>
</Window>

